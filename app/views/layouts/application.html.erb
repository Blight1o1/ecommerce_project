<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  </head>

  <body>
    <div class="columns is-multiline is-4">
      <div class="column">
        <%= image_tag "JB_games.jpg", height: 100, alt: "Logo"%>
      </div>
      <div class="column is-one-fifth">
        <%= link_to image_tag("cart.jpg", alt: "Shopping Cart" , size: "40"), shopping_cart_index_path %>
      </div>
    </div>
    
    
    <div class="tabs">
      <ul>
        <li><%= link_to "Home",       home_path %></li>
        <li><%= link_to "Games",      games_path %></li>
        <li><%= link_to "Genres",     genres_path %></li>
        <li><%= link_to "Platforms",  platforms_path %></li>
        <li><%= link_to "About",      about_path %></li>
        <li><%= link_to "Contact",    contact_path %></li>
      </ul>
    </div>

    <%= yield %>
  </body>
</html>
