<div class="column is-one-quarter">
    <div class="card">
        <div class="card-content">
            <h3 class="title is-5"><%= link_to game.name, game %></h3>
            <p>Score:       <%= game.score%></p>
            <p>Rating:      <%= game.rating%></p>
            <p>Price:       $<%= game.price%></p>
            <p>Genres:      <% game.genres.each do |genre| %> <%= link_to genre.name, genre %><% end %></p>
            <p>Platforms:   <% game.platforms.each do |platform| %> <%= link_to platform.name, platform %><% end %></p>
            <br>
            <p><%= game.description%></p>

            <%= form_with url: shopping_cart_index_path, method: :post do %>
                <%= hidden_field_tag(:id, game.id) %>
                <%= button_tag 'Add to Cart' %>
            <% end %>
        </div>
    </div>
</div>